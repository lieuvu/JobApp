<%= form_for (@user), url: {action: "create"}, class: "form-horizontal" do |f| %>
	<div class="form col-sm-offset-4 col-sm-4">
		<h2>Sign up to JobApp</h2>
		<hr/>
		<div class="form-group">
			<%= f.label :email, class: "control-label col-sm-2" %>
			<div class="col-sm-10">
				<%= f.text_field :email, class: "form-control" %>
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Create My Account", class: "btn btn-primary"%>
			</div>
		</div>
	</div>
<% end %>

<%= form_for (:session), url: login_path, class: "form-horizontal" do |f| %>
	<div class="form col-sm-offset-4 col-sm-4">
		<h2>Log in to JobApp</h2>
		<hr/>
		<div class="form-group">
			<%= f.label :access_code "Access Code", class: "control-label col-sm-2" %>
			<div class="col-sm-10">
				<%= f.text_field :access_code, class: "form-control" %>
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Log in", class: "btn btn-primary"%>
			</div>
		</div>

		<p>New user? <% link_to "Sign up now", signup_path%></p>
	</div>
<% end %>