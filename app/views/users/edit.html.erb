<%= render partial: "layouts/error" %>

<!-- Edit profile -->
<div class="profile-edit-page" col-sm-8">
	<h2>Edit Profile</h2>
	<hr/>
	<%= form_for (current_user), url: { action: "update" },
				html: { class: "form-horizontal", id: "edit_user" },
				method: :patch do |f| %>
	
		<div class="form-group">
			<%= f.label :username, "Company Name:" %>
			<%= f.text_field :username, class: "form-control", required: true %>
		</div>

		<div class="form-group">
			<%= f.label :email, "Email:" %>
			<%= f.text_field :email, class: "form-control", id: "edit_user_email", required: true %>
		</div>

		<div class="form-group">
			<%= f.submit "Save", class: "col-sm-12 btn btn-primary" %>
		</div>
		
	<% end %>
</div>
