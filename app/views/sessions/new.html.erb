<div class="login-page">

	<%= render partial: 'layouts/error' %>

	<h2 class="text-center">Log in to JobApp</h2>

	<%= form_tag login_path, class: "form-horizontal" do %>
		<div class="form-group">
			<%= label_tag(:access_code, "Access Code:") %>
			<%= text_field_tag "access_code", nil, class:"form-control", required: true %>
		</div>
		<div class="form-group">
			<%= submit_tag "Log in", class: "btn btn-primary"%>
		</div>
		<div class="form-group">
			<p>New user?</p>
			<span><%= link_to "Sign up now", signup_path, { class: "btn btn-info bant-sm" } %></span>
		</div>
	<% end %> <%# end - form tag %>
</div>
